{
  "manifest_version": 3,
  "name": "Summarize",
  "version": "1.0",
  "description": "Write a summary of the current active tab.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.aimlapi.com/*"  // Grants access to all subdomains of aimlapi.com
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]  // Add styles if needed
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}